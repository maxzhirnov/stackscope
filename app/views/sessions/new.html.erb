<div class="page">
  <header class="section-header">
    <div>
      <h1>Sign in</h1>
      <p>Enter the admin credentials for this StackScope instance.</p>
    </div>
  </header>

  <div class="form-card">
    <%= form_with url: session_path, class: "form" do |form| %>
      <label>
        <span>Username</span>
        <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username" %>
      </label>
      <label>
        <span>Password</span>
        <%= form.password_field :password, required: true, autocomplete: "current-password" %>
      </label>
      <div class="toolbar">
        <%= form.submit "Sign in", class: "button" %>
      </div>
    <% end %>
  </div>
</div>
